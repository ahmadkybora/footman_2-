{
    "name": "react/react",
    "description": "ReactPHP: Event-driven, non-blocking I/O with PHP.",
    "keywords": ["reactor", "asynchronous", "ReactPHP"],
    "homepage": "https://reactphp.org/",
    "license": "MIT",
    "support": {
        "chat": "https://gitter.im/reactphp/reactphp"
    },
    "require": {
        "php": ">=5.3.8",
        "react/cache": "^1.0",
        "react/dns": "^1.3",
        "react/event-loop": "^1.0",
        "react/http": "^1.0",
        "react/promise": "^2.1 || ^1.2",
        "react/promise-stream": "^1.1.1",
        "react/promise-timer": "^1.6",
        "react/socket": "^1.4",
        "react/stream": "^1.0"
    },
    "require-dev": {
        "clue/block-react": "^1.1",
        "clue/stream-filter": "^1.3",
        "phpunit/phpunit": "^7.0 || ^6.0 || ^5.7 || ^4.8.35"
    },
    "config": {
        "preferred-install": {
            "react/*": "source"
        }
    }
}
